<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:fitsSystemWindows="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#fff"
                android:textSize="15dp"
                android:textStyle="normal"
                android:typeface="serif"   />

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:fitsSystemWindows="true"
                    android:src="@drawable/banner"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/home_page_margin_left"
                android:layout_marginRight="@dimen/home_page_margin_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/search_text_view"
                   android:textSize="15dp"
                    android:textColor="@color/colorPrimary"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
             <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:hint="Search here"
                android:background="@drawable/et_background"
                 />
          </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/ho111m1e"
                    app:cardCornerRadius="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Spinner
                    android:layout_weight="0.2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/city"
                    android:layout_gravity="center"
                    >
                </Spinner>

                <ImageView
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/search_icon"
                    />
            </LinearLayout>
                </android.support.v7.widget.CardView>

            <LinearLayout
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical">

                <LinearLayout
                    android:weightSum="1"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/hom1e"
                        android:layout_weight="0.25"
                        android:layout_marginRight="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:padding="5dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                              android:src="@drawable/education"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />

                            <TextView
                                android:text="Educational &amp; Institute"
                                android:textSize="@dimen/card_text_size"
                                android:textColor="#000"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/poklst"
                        android:layout_weight="0.25"
                        android:layout_marginRight="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:gravity="center"
                            android:padding="5dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:src="@drawable/web1"
                               />

                            <TextView

                                android:textSize="@dimen/card_text_size"
                                android:textColor="#000"
                                android:text="IT &amp; Web Services &amp; Softwares"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/n1ewjs"
                        android:layout_weight="0.25"
                        android:layout_marginRight="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:padding="5dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/electronic"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />

                            <TextView
                                android:text="Electronics &amp; Electrical"
                                android:textSize="@dimen/card_text_size"
                                android:textColor="#000"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/neddws"
                        android:layout_weight="0.25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:padding="5dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/food"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />

                            <TextView
                                android:text="Food &amp; Beverages"
                                android:gravity="center"
                                android:textSize="@dimen/card_text_size"
                                android:textColor="#000"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="1"
                    android:layout_weight="0.33"
                   android:layout_marginBottom="1dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/hofffme"
                        android:layout_weight="0.25"
                        android:layout_marginRight="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:padding="5dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/furniture"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />

                            <TextView
                                android:text="Furnitures"
                                android:textSize="@dimen/card_text_size"
                                android:textColor="#000"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/posssst"
                        android:layout_weight="0.25"
                        android:layout_marginRight="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:padding="5dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:src="@drawable/gems"
                                />

                            <TextView
                                android:text="Gems &amp; Jewellery"
                                android:textSize="@dimen/card_text_size"
                                android:textColor="#000"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/n1sssews"
                        android:layout_weight="0.25"
                        android:layout_marginRight="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:padding="5dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/hotel"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />

                            <TextView
                                android:text="Hotels &amp; Restaurants"
                                android:gravity="center"
                                android:textSize="@dimen/card_text_size"
                                android:textColor="#000"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/nedddws"
                        android:layout_weight="0.25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:padding="5dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/doctor"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />

                            <TextView
                                android:text="Doctors &amp; Hospital"
                                android:gravity="center"
                                android:textSize="@dimen/card_text_size"
                                android:textColor="#000"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="1"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/home"
                        android:layout_weight="0.25"
                        android:layout_marginRight="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:padding="5dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/medical"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />

                            <TextView
                                android:text="Medical Products"
                                android:gravity="center"
                                android:textSize="@dimen/card_text_size"
                                android:textColor="#000"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/post"
                        android:layout_weight="0.25"
                        android:layout_marginRight="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:padding="5dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:src="@drawable/plant"
                                />

                            <TextView
                                android:text="Plant &amp; Machinery "
                                android:gravity="center"
                                android:textSize="@dimen/card_text_size"
                                android:textColor="#000"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/n1ews"
                        android:layout_weight="0.25"
                        android:layout_marginRight="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:padding="5dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/print"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />

                            <TextView
                                android:text="Printing &amp; Publishing"
                                android:gravity="center"
                                android:textSize="@dimen/card_text_size"
                                android:textColor="#000"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/news"
                        android:layout_weight="0.25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:padding="5dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/ic_menu_manage"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />

                            <TextView
                                android:text="Service Providers"
                                android:gravity="center"
                                android:textSize="@dimen/card_text_size"
                                android:textColor="#000"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>


            </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>